{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./",
    "target": "es2021",
    "paths": {
      "@domain/*": ["dist/domain/*"],
      "@usecases/*": ["dist/usecases/*"],
      "@infrastructure/*": ["dist/infrastructure/*"]
    },
    "keepClassNames": true,
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "commonjs"
  }
}
